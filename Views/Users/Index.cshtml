@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Users";
}
<main id="main">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb rounded-0 bg-transparent font-1">
            <li class="breadcrumb-item active" aria-current="page">@Localizer["Users"]</li>
        </ol>
    </nav>
    <div class="content-box bg-white card">
        <div class="title-bar d-flex align-items-center">
            <h2 class="text-main">@Localizer["Users"]</h2>
        </div>

        <!--Error messages section  -->
        <div asp-validation-summary="All" id="errorMessage"></div>
        <!-- End error message -->
        <div class="row mt-1">
            <div class="col-12 d-flex justify-content-start">
                <h6 class="text-dark d-flex "><span class="text-muted">@Localizer["Total Users"]:</span> <strong>@Model.Count()</strong></h6>
            </div>
        </div>
        <div class="row mt-1">
            <div class="col-12 d-flex justify-content-end">
                    <a class="btn btn-primary" asp-action="Create">
                        @Localizer["Create New User"] <span style="font-weight: bolder;">+</span>
                    </a>


            </div>
        </div>

        <div class="mt-2 w-100 users-section">
            <div class="card users-list-card p-0">
                <div class="card-body nicescroll-box p-2">
                    <div class="row wrap m-auto" style="width: 100%; overflow:hidden;">
                        @foreach (var user in Model)
                        {

                            <div class="col-12 col-sm-6 col-lg-3 mb-3 mt-1">
                                <div class="card user-card">
                                    <div class="card-header user-card-header d-flex justify-content-between">
                                        <p>
                                            <span class="text-main ml-1 font-3 font-weight-semibold">
                                                @Html.DisplayFor(x => user.UserName)
                                            </span>
                                        </p>
                                        <span class="actions">
                                            <a href="@Url.Action("Delete",new { id = user.Id })" class="DeleteBtn text-decoration-none">
                                                <input value="@user.Id" hidden />
                                                <img src="~/icons/delete.svg" width="14" height="14" alt="">
                                            </a>
                                            <a href='@Url.Action("ChangePassword")/@user.Id'>
                                                @*<img src="~/icons/edit-icon.svg" width="14" height="14">*@
