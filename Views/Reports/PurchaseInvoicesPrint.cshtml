@model IEnumerable<InvoiceGenerator.Models.PurchaseInvoice>
@{
    Layout = "_PrintLayout";
    ViewData["Title"] = "Purhcase Invoices";
    var CONTROLLER_NAME = this.ViewContext.RouteData.Values["controller"].ToString();
    var CurrentLanguage = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
    int random = new Random().Next();

}
@section Style{

    <style>
        body {
            padding-bottom: 100px;
            width: 290mm;
            font-family: 'Poppins', sans-serif;
        }

        table tr td,
        table tr th {
            border: 1px solid #000000;
            border-collapse: collapse;
            padding: 5px 8px;
        }

        table {
            width: 100%;
            border: 1px solid #000000;
            border-collapse: collapse;
        }

        .print-wrapper {
            padding: 10px 30px;
            border: 1px solid white;
            box-shadow: 4px 2px 5px 1px rgba(235, 225, 225, 0.49);
            min-height: 300mm;
        }

        .header {
            display: flex;
            justify-content: space-between;
            height: 150px;
            margin-bottom: 50px;
        }

            .header .header-details p {
                margin: 0;
                font-size: 12px;
                margin-bottom: 1px;
            }

            .header .header-details h1 {
                margin: 0;
                color: #81BA5D;
                font-size: 24px;
                font-weight: 500
            }

            .header .header-details-ar h1 {
                font-size: 30px !important;
            }

            .header .header-details-ar p {
                font-size: 15px !important;
            }


        .invoice-details-header {
            text-align: center;
        }

            .invoice-details-header h1 {
                font-size: 24px;
                font-weight: 600;
                margin: 0;
            }

                .invoice-details-header h1:last-child {
                    font-weight: 500;
                }


        .line-items {
            margin-top: 10px;
            color: #2B2C3A;
        }

            .line-items .line-items-header {
                background: #969696;
                height: 40px;
                display: flex;
                justify-content: space-between;
                line-height: 40px;
                padding: 0 15px;
            }

            .line-items table {
                width: 100%;
                font-size: 16px;
            }

            .line-items th {
                background: #5C5C5C;
                color: #ffffff;
                font-weight: 500;
            }

        .footer {
            margin-top: 80px;
            text-align: center;
            font-size: 12px;
        }

        .details-date .date {
            display: flex;
            margin-top: 30px;
            justify-content: space-between;
            font-size: 18px;
        }

        .line-items table tr td,
        .line-items table tr th {
            border: 0;
            border-right: 2px solid #B7B9BC;
            border-bottom: 2px solid #B7B9BC;
            border-collapse: collapse;
        }

            .line-items table tr td:last-child,
            .line-items table tr th:last-child {
                border-right: 0 !important;
            }

        .line-items table tr:last-child td,
        .line-items table tr:last-child th {
            border-bottom: 0 !important;
        }

        .line-items table {
            width: 100%;
            border: 2px solid #100708;
            border-collapse: collapse;
        }

        .divider-right {
            border-bottom: 2px solid #A7A9AC;
            text-align: center;
            flex: 1;
        }

        .list .list-amount {
            display: inline-block;
            width: 120px;
            text-align: left;
            position: absolute;
            left: 50%;
            transform: translateX(-50%)
        }

        .list {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            margin-top: 20px;
            font-size: 18px;
            position: relative;
        }
    </style>

}



